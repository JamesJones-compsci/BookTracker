@model BookTracker.Models.Review

@{
    ViewData["Title"] = "Edit Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Review</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-route-bookId="@Model.BookId" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-2">
                <label asp-for="Rating" class="form-label"></label>
                <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Comment" class="form-label"></label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <!-- BookId is fixed by route, so we donâ€™t expose a dropdown -->
            <input type="hidden" asp-for="BookId" />

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-route-bookId="@Model.BookId" class="btn btn-secondary ms-2">
                    Back to Reviews
                </a>
            </div>
        </form>
    </div>
</div>