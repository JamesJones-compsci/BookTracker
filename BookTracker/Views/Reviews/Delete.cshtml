@model BookTracker.Models.Review

@{
    ViewData["Title"] = "Delete Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Review</h1>
<hr />

<h3>Are you sure you want to delete this review?</h3>

<dl class="row">
    <dt class="col-sm-2">Rating</dt>
    <dd class="col-sm-10">@Model.Rating</dd>

    <dt class="col-sm-2">Comment</dt>
    <dd class="col-sm-10">@Model.Comment</dd>

    <dt class="col-sm-2">Created At</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-2">Book</dt>
    <dd class="col-sm-10">@Model.Book?.Title</dd>

    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.User?.UserName</dd>
</dl>

<form asp-action="Delete" asp-route-bookId="@Model.BookId" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-bookId="@Model.BookId" class="btn btn-secondary ms-2">Back to Reviews</a>
</form>