@model BookTracker.Models.Review

@{
    ViewData["Title"] = "Add Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Review</h1>
<hr />

<!-- 
Nested route POST:
/books/{bookId}/reviews/create
-->
<form asp-action="Create" asp-controller="Reviews" asp-route-bookId="@Model.BookId" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden BookId in case the route fails to bind -->
    <input type="hidden" asp-for="BookId" />

    <div class="form-group mb-2">
        <label asp-for="Rating" class="form-label"></label>
        <input asp-for="Rating" type="number" class="form-control" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Comment" class="form-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Review</button>
        <a asp-controller="Books" asp-action="Index" class="btn btn-secondary ms-2">Back to Books</a>
    </div>
</form>