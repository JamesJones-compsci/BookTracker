@model BookTracker.Models.Book

@{
    ViewData["Title"] = "Book Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Book Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Title)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Author)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Author)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Genre)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Genre)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Year)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Year)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.User)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.User.UserName)</dd>
    </dl>
</div>

<hr />

<h4>
    Reviews 
    <span class="badge bg-secondary">
        @(Model.Reviews != null ? Model.Reviews.Count() : 0)
    </span>
</h4>

@if (Model.Reviews != null && Model.Reviews.Any())
{
    <div class="list-group">
        @foreach (var review in Model.Reviews)
        {
            <div class="list-group-item mb-2">
                <h6>
                    Rating: @review.Rating/5 
                    <small class="text-muted">by @review.User?.UserName on @review.CreatedAt.ToShortDateString()</small>
                </h6>
                <p>@review.Comment</p>
                <div>
                    <a asp-controller="Reviews" asp-action="Details" asp-route-bookId="@Model.Id" asp-route-id="@review.Id">View</a> |
                    <a asp-controller="Reviews" asp-action="Edit" asp-route-bookId="@Model.Id" asp-route-id="@review.Id">Edit</a> |
                    <a asp-controller="Reviews" asp-action="Delete" asp-route-bookId="@Model.Id" asp-route-id="@review.Id">Delete</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No reviews yet for this book.</p>
}

<div class="mt-3">
    <a asp-controller="Reviews" asp-action="Create" asp-route-bookId="@Model.Id" class="btn btn-primary">Add Review</a>
</div>

<hr />

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
